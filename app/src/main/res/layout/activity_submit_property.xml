<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".submitProperty">
<GridLayout
    android:layout_centerInParent="true"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/onRent"
            android:padding="10dp"
            android:src="@drawable/renton"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <TextView
            android:text="Take On Rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:padding="10dp">
        <ImageView
            android:id="@+id/giveOnRent"
            android:padding="10dp"
            android:src="@drawable/giverent"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <TextView
            android:text="Give On Rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:padding="10dp">
        <ImageView
            android:id="@+id/purProp"
            android:padding="10dp"
            android:src="@drawable/purchasehouse"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <TextView
            android:text="Purchase Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:padding="10dp">
        <ImageView
            android:id="@+id/selProp"
            android:padding="10dp"
            android:src="@drawable/sold"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <TextView
            android:text="Sell Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</GridLayout>

</RelativeLayout>