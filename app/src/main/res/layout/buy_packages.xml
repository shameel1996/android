<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/type_pack"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Package = 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/price_pack"
                android:background="@drawable/blackcorner"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:text="Rs. 35,000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@drawable/blackcorner"

                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                android:text="Expiration Date"
                android:layout_width="0dp"
                    android:layout_weight="1"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/exp_pack"
                    android:textColor="@android:color/white"
                    android:background="@drawable/buttons"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:text="Never Expire"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/blackcorner"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:text="Property Credit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/credit_pack"
                    android:textColor="@android:color/white"
                    android:background="@drawable/buttons"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:text="35000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button


                android:textColor="@android:color/white"
                android:text="Choose"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/buttons"
                android:id="@+id/choosePackage"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>