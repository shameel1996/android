<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signInActivity">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/logosignIn"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/unnamed"/>
    <EditText
        android:textColor="#302b63"
        android:drawableLeft="@drawable/manuser"
        android:id="@+id/userName"
        android:textAllCaps="false"
        android:hint="User Name"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/cornesrs"
        android:layout_below="@+id/logosignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText

        android:textColor="#302b63"
        android:drawableLeft="@drawable/lock"
        android:inputType="textPassword"
        android:layout_below="@+id/userName"
        android:id="@+id/Password"
        android:textAllCaps="false"
        android:hint="  Password"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/cornesrs"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/remeberMe"
            android:text="Remember me"
            android:layout_below="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="80dp"
            android:textColor="@android:color/black"
            android:id="@+id/createAcc"
            android:text="Create an Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/signin"
        android:textColor="#ffffff"
        android:text="sign In"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:background="@drawable/buttons"
        />




</LinearLayout>
    <TextView
        android:textSize="10dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:text="Â© 2019 - VMatchU DESIGNED BY KNOVATEK"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>