<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

   <android.support.v7.widget.CardView
       android:layout_marginTop="5dp"
       android:layout_width="match_parent"
       android:id="@+id/card"
       android:layout_height="match_parent">

       <RelativeLayout


           android:id="@+id/content_main_frame_2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >

           <ImageView

               android:id="@+id/image_prop_2"
               android:layout_width="120dp"
               android:layout_height="150dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="5dp"
               android:src="@drawable/propertyback" />

           <TextView

               android:id="@+id/id_property"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:background="@drawable/buttons"

               android:textAlignment="center"
               android:textColor="#ffffff" />

           <ImageView
               android:id="@+id/dropForProperty"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/menuicon"
               android:layout_alignParentRight="true"
               android:layout_margin="10dp"

             />

           <TextView

               android:id="@+id/title_myProp_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:layout_toRightOf="@+id/image_prop_2"
               android:text="Behria Town"
               android:textColor="@android:color/black"
               android:textSize="18sp" />

           <TextView

               android:id="@+id/active_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/title_myProp_2"
               android:layout_toRightOf="@+id/image_prop_2"
               android:text="Active"
               android:textColor="@android:color/holo_green_dark"
               android:textSize="10dp" />

           <TextView

               android:drawablePadding="10dp"
               android:id="@+id/location_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/active_2"
               android:layout_toRightOf="@+id/image_prop_2"
               android:drawableLeft="@drawable/mark"
               android:text="Karachi" />

           <TextView


               android:drawablePadding="10dp"
               android:id="@+id/type_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/location_2"
               android:layout_toRightOf="@+id/image_prop_2"
               android:drawableLeft="@drawable/battery"
               android:text="For Sell" />

           <TextView
               android:id="@+id/calenxder_2"
               android:layout_width="wrap_content"

               android:drawablePadding="10dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/type_2"
               android:layout_toRightOf="@+id/image_prop_2"
               android:drawableLeft="@drawable/calendra"
               android:text="April 30,2019" />

           <Button
               android:id="@+id/seeMatch"
               android:layout_width="match_parent"


               android:textSize="10dp"
               android:layout_marginTop="2dp"
               android:textColor="@android:color/white"
               android:layout_height="25dp"
               android:layout_below="@+id/calenxder_2"
               android:layout_toRightOf="@+id/image_prop_2"
              android:background="@drawable/buttons"
               android:text="See Match Properties" />

       </RelativeLayout>
   </android.support.v7.widget.CardView>



</RelativeLayout>