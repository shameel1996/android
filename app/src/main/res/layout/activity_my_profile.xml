<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F8"
    tools:context=".myProfileActivity">
<RelativeLayout
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        app:title="My Account"
        app:titleTextColor="@color/colorPrimaryNext"
        android:id="@+id/toolbarMyAccount"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView


            android:layout_width="150dp"
            android:id="@+id/image"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profileavatar"/>
        <TextView
            android:id="@+id/change_pic"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile Picture"/>
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            android:id="@+id/first_name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/change_pic"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:id="@+id/first_name_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/last_name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/first_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:id="@+id/last_name_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/mobile"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/last_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:id="@+id/mobile_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mobile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:id="@+id/email_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/about"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:gravity="top"
                android:id="@+id/about_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="About Me" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/fburl"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/about"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:id="@+id/fburl_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Facebook URL" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wesiteurl"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fburl"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:id="@+id/wesiteurl_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website URL" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="Update Profile"
            android:id="@+id/line2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/wesiteurl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/old"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/line2"
            android:layout_marginTop="5dp"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_margin="10dp"
                android:padding="5dp"
                android:id="@+id/old_ed"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/newPass"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/old"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:padding="5dp"
                android:layout_margin="10dp"
                android:inputType="textPassword"
                android:id="@+id/newPass_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirm"
            android:layout_centerHorizontal="true"
            app:passwordToggleEnabled="true"
            android:layout_below="@+id/newPass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:padding="5dp"
                android:inputType="textPassword"
                android:layout_margin="10dp"
                android:id="@+id/confirm_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="Update Password"
            android:id="@+id/line3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons" />
        <LinearLayout
            android:layout_below="@id/line3"

            android:background="@android:color/white"
            android:elevation="20dp"
            android:padding="10dp"

            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/ll11"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView

                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Agent Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textforagent"
                android:layout_marginTop="10dp"
                android:text="If you want to become an agent,Please read First our"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/termandcondition"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:text="Our Terms and condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/agentbtn"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"

                android:textSize="12sp"
                android:text="Become an agent"

                android:layout_gravity="end"
                android:layout_alignParentRight="true"

                android:layout_below="@+id/confirm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


   </ScrollView>